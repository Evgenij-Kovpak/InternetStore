@model SmallCartViewModel

@if (Model != null)
{
    <p>Товар добавлен в корзину: <span class="badge badge-primary">@Model.NumberOfItems</span> </p>
    <p>Всего: <b>@Model.TotalAmount.ToString("C2")</b></p>
    <a class="btn btn-primary mb-2" asp-controller="Cart" asp-action="Index">Смотреть корзину</a>
    <br />
    <a class="btn btn-danger" asp-controller="Cart" asp-action="Clear">Очистить корзину</a>
}
else
{
    <p class="lead m-0">Ваша корзина пуста.</p>
}


